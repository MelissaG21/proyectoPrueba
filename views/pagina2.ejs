        <div class="modal-dialog modal-lg" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 id="title"> Create a Row</h5> </h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <form action='/api/create' method="post" enctype="application/x-www-form-urlencoded">
              <div class="modal-body">
                <div class="form-group"> 
                  <label class="h4 ">Name</label>
                  <input type="text" class="form-control" rows="5" name="name" required></input>
                  <br>
                 
                  <label class="h4 ">declination</label>
                  <input type="text" class="form-control" rows="5" name="declination" required></input>
                  <br>
                  <label class="h4 ">distance_light_year</label>
                  <input type="number" class="form-control" rows="5" name="distance_light_year" required></input>
                  <br>
                  <label class="h4 ">spectral_class</label>
                  <input type="number" class="form-control" rows="5" name="spectral_class" required></input>
                  <br>
                 
                  <label for="cons">Choose Type:</label>

                    <select name="cons" id="cons">
                        <option value="1">scorpius </option>
                        <option value="2">orion </option>
                        <option value="3"> opcion 3</option>
                        <option value="4"> opcion 4 </option>
                    </select>
                 </div>
    
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-success">Guardar</button>
              </div>
            </form>
          </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
      </div>
    <script>
        function getCons() {
            event.preventDefault();
            var conste = $('#cons').val()
            console.log(conste)
            const settings = {
                url: "/api/getInfo/"+conste,
                type: "GET"
            };

            $.ajax(settings).done(res => {

                console.log(res)
                $('#thead').html('')
                var attrs = ["name", "declination", "distance_light_year", "spectral_class"];
                var thead = document.getElementById("thead");
                var tr = thead.insertRow(-1);
                attrs.forEach(attr => {
                    var th = tr.insertCell(-1);
                    th.innerText = attr;
                    th.scope = "col";
                });
                var tbody = document.getElementById("tbody");
                res.data.forEach(star => {
                    var tr = tbody.insertRow(-1);
                    attrs.forEach(attr => {
                        var td = tr.insertCell(-1);
                        td.innerText = star[attr];
                    });
                });
            });

        }
